<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/fotoPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Foto do Perfil"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/fotoPerfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/perfil" />


    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/IconeNome"
        android:layout_alignEnd="@+id/fotoPerfil"
        android:text="Guilherme"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/nome"
        android:layout_marginTop="25dp"
        android:text="17 anos"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nome"
        android:layout_below="@+id/idade"
        android:layout_marginTop="25dp"
        android:text="gui@g.com"
        android:textColor="#0000A0"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="25dp"
        android:text="999999999"
        android:textColor="#0000A0"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/IconeNome"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/imageButton"
        android:layout_below="@+id/imageButton"
        android:layout_marginTop="14dp"
        android:src="@drawable/nome" />

    <ImageView
        android:id="@+id/IconeIdade"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignTop="@+id/idade"
        android:src="@drawable/idade" />

    <ImageView
        android:id="@+id/IconeEmail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignTop="@+id/email"
        android:src="@drawable/email" />

    <ImageView
        android:id="@+id/IconeTelefone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/Telefone"
        android:layout_alignStart="@+id/imageButton"
        android:src="@drawable/telefone" />

    <Button
        android:id="@+id/botaoScanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Telefone"
        android:layout_centerHorizontal="true"
        android:text="Escanear Codigo de Barras" />

    <TextView
        android:id="@+id/textoCodigoBarraas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/IconeTelefone"
        android:layout_below="@+id/botaoScanner"
        android:layout_marginTop="11dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

</RelativeLayout>