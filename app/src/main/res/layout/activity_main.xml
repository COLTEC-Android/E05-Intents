<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/fotoPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Foto do Perfil"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />


    <ImageButton
        android:id="@+id/imageButton"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:scaleType="fitXY"
        />


    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Veazey"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nome"
        android:layout_marginTop="20dp"
        android:text="25 anos"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nome"
        android:layout_below="@+id/idade"
        android:layout_marginTop="25dp"
        android:text="exemplo@wixseusite.com"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/Telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="25dp"
        android:text="(31)1234-5678"
        android:textColor="#000000"
        android:textSize="15dp" />

    <Button
        android:id="@+id/botaoScanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Telefone"
        android:layout_centerHorizontal="true"
        android:text="EscaneaAaAaAR!" />

    <TextView
        android:id="@+id/textoCodigoBarraas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/Telefone"
        android:layout_below="@+id/botaoScanner"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="15dp" />



</RelativeLayout>