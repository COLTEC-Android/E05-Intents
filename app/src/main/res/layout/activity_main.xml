<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:id="@+id/imgProfile"
        
        android:layout_centerHorizontal="true"

        />


    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"

        android:src="@drawable/edit"
        android:id="@+id/btnEdit"

        android:background="?selectableItemBackgroundBorderless"
        android:scaleType="fitXY"

        android:layout_toRightOf="@id/imgProfile"
        android:layout_marginTop="75dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Erick Etiene"
        android:id="@+id/profileName"

        android:layout_below="@+id/imgProfile"

        android:layout_toRightOf="@id/profileMail"
        android:layout_centerInParent="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="333.erick@gmail.com"
        android:id="@+id/profileMail"


        android:layout_toLeftOf="@id/imgProfile"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="31992855944"
        android:id="@+id/profileTel"

        android:layout_toRightOf="@id/imgProfile"

        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=", 23"
        android:id="@+id/profileAge"

        android:layout_toRightOf="@id/profileName"
        android:layout_below="@id/imgProfile"

        />

    <TextView
        android:id="@+id/lblScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileAge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"

        android:text="Escaneie um cÃ³digo de Barras: "
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/lblScan"
        android:layout_centerHorizontal="true"
        android:text="Scan"
        />

    <TextView
        android:id="@+id/lbl_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:layout_below="@id/btn_scan"
        android:layout_centerHorizontal="true"
        />
    
</RelativeLayout>